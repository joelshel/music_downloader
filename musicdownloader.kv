#:kivy 2.1.0

#:import dl download
#:import hex kivy.utils.get_color_from_hex

#:set text_color '#B2F6FF'

<LabelInput>:
    Label:
        text: root.label_text
        font_size: 20
        size_hint: None, None
        size: 150, 37
        pos_hint: {'center_y': 0.5}
        color: hex(text_color)
    TextInput:
        id: text_input
        multiline: False
        text: root.input_text
        on_text: root.alter_input_text()
        font_size: 20
        size_hint: None, None
        size: 320, 37
        pos_hint: {'center_y': 0.5}
        background_color: hex(text_color)
        foreground_color: hex('#015958')
        selection_color: hex('#0FC2C077')

<Interface>:
    padding: 5
    spacing: 5
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb: hex('#023535')
        Rectangle:
            pos: self.pos
            size: self.size
    LabelInput:
        id: username
        label_text: 'username:'
        text: self.input_text
    LabelInput:
        id: playlist
        label_text: 'playlist:'
        text: self.input_text
    Button:
        text: 'download'
        font_size: 20
        size_hint: None, None
        size: 180, 37
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        color: hex(text_color)
        background_color: hex('#008F8C')
        on_release: dl.download(username.text, playlist.text)
