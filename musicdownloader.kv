#:kivy 2.1.0

#:import hex kivy.utils.get_color_from_hex

#:set letter_size 20
#:set text_color hex('#B2F6FF')
#:set bg_color hex('#023535')
#:set button_color hex('#008F8C')
#:set pressed_color hex('#A6A3A8')

MainLayout:

<MainLayout>:
    orientation: "vertical"
    padding: "10dp"
    spacing: "8dp"
    canvas.before:
        Color:
            rgb: bg_color
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols: 2
        spacing: "8dp"
        Label:
            text: "username:"
            font_size: letter_size
            size_hint_x: .5
            color: text_color
        TextInput:
            id: username
            multiline: False
            size_hint: .8, None
            height: "36dp"
            font_size: letter_size
            pos_hint: {"center_x":.5, "center_y":.5}
            background_color: text_color
            foreground_color: hex('#015958')
            selection_color: hex('#0FC2C077')
        Label:
            text: "playlist:"
            font_size: letter_size
            size_hint_x: .5
            color: text_color
        TextInput:
            id: playlist
            multiline: False
            size_hint: .8, None
            font_size: letter_size
            height: "36dp"
            pos_hint: {"center_x":.5, "center_y":.5}
            background_color: text_color
            foreground_color: hex('#015958')
            selection_color: hex('#0FC2C077')
    Button:
        text: "download"
        size_hint: .25, None
        height: "33dp"
        pos_hint: {"center_x":.5, "center_y":.5}
        font_size: letter_size
        color: text_color
        background_color: button_color
        on_press:
            self.background_color = pressed_color
        on_release:
            self.background_color = button_color;
            root.thread_download(username.text, playlist.text)
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: .25
        ProgressBar:
            max: root.max
            value: root.value
            size_hint: .8, .1
            pos_hint: {"center_x":.5}
        Label:
            text: root.text
            size_hint_y: .1
            font_size: 14
            color: text_color


<Error>:
    auto_dismiss: False
    title: "Error"
    background: ""
    background_color: bg_color
    title_color: text_color
    title_size: letter_size
    BoxLayout:
        orientation: "vertical"
        padding: "6dp"
        spacing: "8dp"
        Label:
            text: root.text
            font_size: letter_size
            color: text_color
            halign: "center"
        Button:
            text: 'Close'
            size_hint: None, None
            height: "33dp"
            width: "120dp"
            pos_hint: {"center_x":.5, "center_y":.5}
            font_size: letter_size
            color: text_color
            background_color: button_color
            on_press:
                self.background_color = pressed_color
            on_release:
                self.background_color = button_color
                root.dismiss()
